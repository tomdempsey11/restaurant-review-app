{
  "name": "restaurant-review-app",
  "version": "1.0.0",
  "description": "Restaurant Review Web App - Express + MongoDB + Sessions starter",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "seed": "node src/seed.js",
    "seed:user": "node src/seedUser.js",
    "seed:admin": "node scripts/seedAdmin.js",
    "build-css": "sass public/scss:public/css --no-source-map",
    "watch-css": "sass --watch public/scss:public/css --no-source-map"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "mongoose": "^8.6.3",
    "morgan": "^1.10.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "sass": "^1.93.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": ["babel-jest", { "presets": ["@babel/preset-env"] }]
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/jest.setup.js"]
  }
}
