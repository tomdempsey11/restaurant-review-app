<%- include('../../partials/header', { title: 'Admin â€¢ Restaurants', user }) %>

<h2>Admin: Restaurants</h2>

<div style="margin: 12px 0;">
  <a class="btn btn-primary" href="/admin/restaurants/new">+ New Restaurant</a>
</div>

<table class="table" style="width:100%; border-collapse: collapse;">
  <thead>
    <tr>
      <th style="text-align:left;">Name</th>
      <th style="text-align:left;">Cuisine</th>
      <th style="text-align:left;">Address</th>
      <th style="text-align:left;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (restaurants && restaurants.length) { %>
      <% restaurants.forEach(r => { %>
        <tr>
          <td><%= r.name %></td>
          <td><%= r.cuisine || '-' %></td>
          <td><%= r.address || '-' %></td>
          <td>
            <a class="btn btn-sm" href="/restaurants/<%= r.slug %>" target="_blank">View</a>
            <a class="btn btn-sm btn-warning" href="/admin/restaurants/<%= r._id %>/edit">Edit</a>
            <form action="/admin/restaurants/<%= r._id %>/delete" method="POST" style="display:inline-block" onsubmit="return confirm('Delete this restaurant?');">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="4">No restaurants yet.</td></tr>
    <% } %>
  </tbody>
</table>

<%- include('../../partials/footer') %>
